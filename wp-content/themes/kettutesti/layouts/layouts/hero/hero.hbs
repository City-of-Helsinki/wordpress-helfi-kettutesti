{{call 'setupLayoutData'}}

<section id="{{anchor_id}}" class="hero " style="">

<div class="hero__wrapper">

{{! ************* Field: title ************* }}

{{#if title}}
  <h1 class="text-2xl font-bold underline bg-red-100">
   {{title}}
  </h1>
{{/if}}


{{! ************* Field: image ************* }}

{{#if image}}
